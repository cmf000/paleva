<div class="container mx-auto px-4 py-8 max-w-md">
    <div class="container mx-auto px-4 py-8">
        <nav class="text-sm mb-4">
                <%= link_to @restaurant.trade_name, restaurant_path(@restaurant.id), class: "text-blue-600 hover:text-blue-800" %>
        </nav>

    </div>
<div class="flex justify-between items-center mb-4 px-2">
  <h1 class="text-2xl font-bold text-gray-900">Nova Marcação</h1>
  <%= link_to "Voltar", @return_to, class: "text-gray-600 hover:text-gray-800" %>
</div>

   <div class="bg-white rounded-lg shadow-md p-6">
       <%= form_with(model: @tag, url: [@restaurant, @tag], class: "space-y-6") do |f| %>
           <%= hidden_field_tag :return_to, @return_to %>
           
           <div>
               <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
               <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
           </div>
           <%= f.submit class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
       <% end %> 
   </div>

</div>