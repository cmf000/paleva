<h2><%=link_to @restaurant.trade_name, restaurant_path(@restaurant.id)%></h2>
<h1>Nova Bebida:</h1>

<% if @beverage.errors.any? %>
    <% @beverage.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
    <% end %>
<% end %>

<%= render 'form', beverage: @beverage, restaurant: @restaurant, tags: @tags, url: restaurant_beverages_path(@restaurant)%>