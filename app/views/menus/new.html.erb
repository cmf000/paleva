<div class="max-w-md mx-auto mt-8">
    <div class="mb-8">
        <nav class="text-sm mb-4">
            <%= link_to @restaurant.trade_name, restaurant_path(@restaurant.id), class: "text-blue-600 hover:text-blue-800" %>
        </nav>
    </div>
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Novo cardápio</h1>
    </div>


    <% if @menu.errors.any? %>
        <% @menu.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <%end %>
    <% end %>

    <%= form_with(model: [@restaurant, @menu], class: "space-y-4") do |f| %>
        <div>
            <%= f.label :name, Menu.human_attribute_name(:name), class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div class="pt-2">
            <%= f.submit 'Criar cardápio', class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-200" %>
        </div>
    <% end %>
</div>