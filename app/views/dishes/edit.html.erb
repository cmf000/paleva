<h2><%=link_to @restaurant.trade_name, restaurant_path(@restaurant.id)%></h2>
<h1>Editar prato:</h1>

<% if @dish.errors.any? %>
    <%@dish.errors.full_messages.each do |msg| %>
        <p><%=msg%></p>
    <% end %>
<% end %>

<div id="edit_<%=dom_id @dish%>">
    <%= form_with(model: @dish, url: restaurant_dish_path(@restaurant, @dish)) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %><br>

        <%= f.label :description %>
        <%= f.text_area :description %><br>

        <%= f.label :calories %>
        <%= f.number_field :calories %><br>

        <%= f.label :image %>
        <%= f.file_field :image %><br>

        <% if @dish.image.attached? %>
            <p>Imagem atual:</p>
            <%= image_tag @dish.image, width: 100 %><br>
            
            <%= f.check_box :remove_image %>
            <%= f.label :remove_image, "Remover imagem" %><br>
        <% end %>

        <%= f.submit%>
    <% end %>
</div>
