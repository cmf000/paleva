<h1>Novo prato:</h1>

<% if @dish.errors.any? %>
    <%@dish.errors.full_messages.each do |msg| %>
        <p><%=msg%></p>
    <% end %>
<% end %>

<%= form_with(model: @dish, url: restaurant_dishes_path(@restaurant)) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :calories %>
    <%= f.number_field :calories %><br>

    <%= f.label :image %>
    <%= f.file_field :image %><br>
    <%= f.submit %>
<% end %>