<h1>Resultados da busca por: <%=@query%> </h1>
<p><%=@dishes.length + @beverages.length%> iten(s) encontrado(s)</p>

<div>
    <% if @beverages.any? %>
        <h2>Bebidas</h2>
        <%= render partial: 'shared/beverage', collection: @beverages, as: :beverage %>
    <% end %>
</div>

<div>
    <% if @dishes.any? %>
        <h2>Pratos</h2>
        <%= render partial: 'shared/dish', collection: @dishes, as: :dish%>
    <% end %>
</div>

