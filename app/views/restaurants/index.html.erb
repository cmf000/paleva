
<div class="container mx-auto px-4 py-8 max-w-6xl">
    <div id="<%= dom_id @restaurant %>" class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Seu restaurante</h2>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <%= link_to restaurant_path(@restaurant.id), class: "block" do %>
              <span class="text-xl text-blue-600 hover:text-blue-800"><%= @restaurant.trade_name %></span>
            <% end %>
        </div>  
    </div>
    <div>
        <% restaurants = Restaurant.excluding(current_user.owned_restaurant) %>
        <% if restaurants.any? %>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Veja o que os outros restaurantes estÃ£o fazendo:</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% restaurants.each do |r| %>  
                    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                        <%= link_to restaurant_path(r.id), class: "block" do %>
                            <span class="text-lg text-gray-800 hover:text-blue-600"><%= r.trade_name %></span>
                        <% end %>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>