<h1>Resultados da busca por: <%=@query%> </h1>
<p><%=@dishes.length + @beverages.length%> iten(s) encontrado(s)</p>

<div>
    <% if @beverages.any? %>
        <h2>Bebidas</h2>
        <ul>
            <% @beverages.each do |beverage| %>
                <div>
                    <li id=<%= beverage.hash %>>
                        <%= render 'shared/beverage', beverage: beverage%>
                   </li>
                </div>
            <% end %>
        </ul>        
    <% end %>
</div>


<div>
    <% if @dishes.any? %>
        <h2>Pratos</h2>
        <ul>
            <% @dishes.each do |dish| %>
                <div>
                    <li id=<%= dish.hash%>>
                        <%= render 'shared/dish', dish: dish%>
                   </li>
                </div>
            <% end %>
        </ul>
    <% end %>
</div>

