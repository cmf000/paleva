<div class="container mx-auto px-4 py-8 max-w-md">
   <nav class="mb-8">
       <div class="flex flex-wrap items-center gap-2 text-lg">
          <%= link_to @offerable.name, [@restaurant, @offerable], class: "text-blue-600 hover:text-blue-800" %> - 
           <%= link_to @restaurant.trade_name, restaurant_path(@restaurant), class: "text-blue-600 hover:text-blue-800" %>
       </div>
   </nav>
   <% if @offering.errors.any? %>
       <div class="mb-6 p-4 bg-red-100 rounded-md">
           <% @offering.errors.full_messages.each do |msg| %>
               <p class="text-red-700"><%= msg %></p>
           <% end %>
       </div>
   <% end %>
 
   <div class="bg-white rounded-lg shadow-md p-6">
       <h2 class="text-xl font-bold text-gray-900 mb-4">Editar preço</h2>
       <%= form_with(model: [@restaurant, @offerable, @offering], class: "space-y-4") do |f| %>
           <div>
               <%= f.label :current_price, class: "block text-sm font-medium text-gray-700 mb-1" %>
               <%= f.number_field :current_price, step: 0.1, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
           </div>
           <%= f.submit 'Alterar Preço', class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
       <% end %>
   </div>
</div>