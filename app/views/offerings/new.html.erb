<div class="container mx-auto px-4 py-8 max-w-md">
   <div class="mb-8">
        <nav class="text-sm mb-4">
           <%= link_to @restaurant.trade_name, restaurant_path(@restaurant), class: "text-blue-600 hover:text-blue-800" %>/
           <%= link_to @offerable.name, [@restaurant, @offerable], class: "text-blue-600 hover:text-blue-800" %>

        </nav>
       <h1 class="text-2xl font-bold text-gray-900 mb-4">Nova porção</h1>
   </div>

   <div class="bg-white rounded-lg shadow-md p-6">
       <% if @offering.errors.any? %>
           <div class="mb-6 p-4 bg-red-100 rounded-md">
               <h2 class="font-medium text-red-800 mb-2">Verifique os erros abaixo:</h2>
               <% @offering.errors.full_messages.each do |msg| %>
                   <% unless msg.include?("Data") %>
                       <p class="text-red-700"><%= msg %></p>
                   <% end %>
               <% end %>
           </div> 
       <% end %> 
       <%= form_with(model: [@restaurant, @offerable, @offering], class: "space-y-6") do |f| %>
           <div>
               <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
               <%= f.text_field :description, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
           </div>

           <div>
               <%= f.label :current_price, class: "block text-sm font-medium text-gray-700 mb-1" %>
               <%= f.number_field :current_price, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
           </div>
           <%= f.submit class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
       <% end %>
   </div>
</div>