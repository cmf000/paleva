<h2><%=I18n.translate('devise.sessions.new.sign_in')%></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: true }) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", title: "E-mail é obrigatório" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, required:true, autocomplete: "current-password", title: "Senha é obrigatória" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit I18n.translate('devise.sessions.new.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
