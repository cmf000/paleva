<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Novo Pedido</h1>
  <% if @order.errors.any? %>
        <% @order.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <%end %>
    <% end %>

  <%= form_with(model: [@restaurant, @order], class: "space-y-6") do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :customer_name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :customer_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
        <%= f.telephone_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= f.label :cpf, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :cpf, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
    </div>
    <%= f.submit class: "w-full mt-6 px-4 py-2 bg-blue-600 text-white rounded-md" %>
  <% end %>
</div>